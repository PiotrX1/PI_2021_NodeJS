extends layout 

block content
	h1= title
	if info
		div(class="alert alert-info", role="alert")= info
		
	if error
		div(class="alert alert-danger", role="alert")= error
	form(method="post", enctype="multipart/form-data")
		div(class="mb-3")
			label(for="title", class="form-label") Tytuł
			input(type="text", class="form-control", id="title", name="title")
		div(class="mb-3")
			label(for="ingredients", class="form-label") Składniki
			textarea(type="text", class="form-control", id="ingredients", name="ingredients")
		div(class="mb-3")
			label(for="text", class="form-label") Treść
			textarea(type="text", class="form-control", id="text", name="text")
		div(class="mb-3")
			label(for="image", class="form-label") Obrazek
			input(type="file", class="form-control", id="image", name="image", accept="image/*")
		div(class="mb-3")
			label(for="difficulty", class="form-label") Trudność wykonania (1-5)
			input(type="number", class="form-control", id="difficulty", name="difficulty", min="1", max="5", value="1")
		div(class="mb-3")
			label(for="type", class="form-label") Rodzaj
			select(class="form-control", id="type", name="type")
				each val in types 
					option(value = val.Id) #{val.Name}
						
		<button type="submit" class="btn btn-primary">Dodaj</button>
